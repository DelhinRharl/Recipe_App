<table class="table-auto w-full max-w-xl mx-auto text-left mb-10 text-lg">
  <thead class="bg-gray-400">
    <tr class="h-10">
      <th class="p-4">Food</th>
      <th class="p-4">Quantity</th>
      <th class="p-4">Price</th>
    </tr>
  </thead>
  <tbody class="bg-gray-300 p-20">
    <% @recipe_foods.each do |r|%>
      <tr class="h-16">
        <td class="p-4"><%= r.food.name %></td>
        <td class="p-4"><%= r.quantity || 0 %> <%= r.food.measurement_unit %></td>
        <td class="p-4">$<%= r.food.price * (r.quantity || 0) %></td>
      </tr>
    <% end %>
  </tbody>
</table>